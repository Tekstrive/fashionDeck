# FashionDeck ML Service - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
APP_NAME="FashionDeck ML Service"
APP_VERSION="1.0.0"
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# OpenAI (GPT-4o-mini for prompt parsing)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# CLIP Model
CLIP_MODEL_NAME=ViT-B/32
CLIP_PRETRAINED=openai

# Database
DATABASE_URL=postgresql://fashiondeck:fashiondeck_dev_password@localhost:5432/fashiondeck

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Timeouts (in seconds)
LLM_TIMEOUT=10
EMBEDDING_TIMEOUT=5
